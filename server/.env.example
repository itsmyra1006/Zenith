# MongoDB Connection String
# Replace with your own connection string from MongoDB Atlas or your local instance
MONGO_URI=your_mongodb_connection_string

# Server Port
PORT=5000

# JSON Web Token Secret
# Use a long, random, and secret string for signing JWTs
JWT_SECRET=a_very_strong_and_long_secret_key

# Google OAuth 2.0 Credentials
# Get these from your Google Cloud Platform project
GOOGLE_CLIENT_ID=your_google_client_id_from_gcp
GOOGLE_CLIENT_SECRET=your_google_client_secret_from_gcp

# Frontend URL
# This is the URL where your React app is running, used for CORS and redirects
CLIENT_URL=http://localhost:3000

